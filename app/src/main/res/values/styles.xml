<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GeneralLightFont">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="GeneralBlackFont">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="MainLogo">
        <item name="android:fontFamily">@font/dancingscript</item>
        <item name="android:text">@string/app_title</item>
    </style>

    <style name="LoginButton">
        <item name="android:layout_height">42dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="InputText">
        <item name="android:background">@drawable/bg_rounded_corners_white_rectangle</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="android:colorControlNormal">@color/colorGrey</item>
        <item name="android:colorControlActivated">@color/colorGold</item>
    </style>

</resources>