<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment"
    android:background="@color/colorSmoke">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="400dp"
           android:weightSum="3"
           android:orientation="vertical"
           android:padding="20dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:weightSum="2"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:weightSum="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:paddingEnd="10dp"
                   tools:ignore="NestedWeights">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="0.7"
                       app:cardCornerRadius="5dp">

                       <ImageButton
                           android:id="@+id/btn_air_conditioner"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:src="@drawable/air_conditioner"
                           android:scaleType="centerInside"
                           android:background="@color/colorWhite"/>

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="0.3"
                       android:textSize="13sp"
                       android:text="@string/txt_air_conditioner"
                       android:gravity="center"
                       style="@style/GeneralBlackFont" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:weightSum="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   android:paddingStart="10dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="0.7"
                       app:cardCornerRadius="5dp">

                       <ImageButton
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:src="@drawable/plug"
                           android:scaleType="centerInside"
                           android:background="@color/colorWhite"/>

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="0.3"
                       android:textSize="13sp"
                       android:text="@string/txt_plug"
                       android:gravity="center"
                       style="@style/GeneralBlackFont" />

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:weightSum="2"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:weightSum="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   tools:ignore="NestedWeights"
                   android:paddingEnd="10dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="0.7"
                       app:cardCornerRadius="5dp">

                       <ImageButton
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:src="@drawable/water"
                           android:scaleType="centerInside"
                           android:background="@color/colorWhite"/>

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="0.3"
                       android:textSize="13sp"
                       android:text="@string/txt_water"
                       android:gravity="center"
                       style="@style/GeneralBlackFont" />

               </LinearLayout>


               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:weightSum="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   tools:ignore="NestedWeights"
                   android:paddingStart="10dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="0.7"
                       app:cardCornerRadius="5dp">

                       <ImageButton
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:src="@drawable/maintenance"
                           android:scaleType="centerInside"
                           android:background="@color/colorWhite"/>

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="0.3"
                       android:textSize="13sp"
                       android:text="@string/txt_maintenance"
                       android:gravity="center"
                       style="@style/GeneralBlackFont" />

               </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="1"
               android:weightSum="2"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:weightSum="1"
                   android:orientation="vertical"
                   android:gravity="center"
                   tools:ignore="NestedWeights"
                   android:paddingEnd="10dp">

                   <androidx.cardview.widget.CardView
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:layout_weight="0.7"
                       app:cardCornerRadius="5dp">

                       <ImageButton
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:paddingTop="10dp"
                           android:paddingBottom="10dp"
                           android:src="@drawable/padlock"
                           android:scaleType="centerInside"
                           android:background="@color/colorWhite"/>

                   </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="0dp"
                       android:layout_weight="0.3"
                       android:textSize="13sp"
                       android:text="@string/txt_padlock"
                       android:gravity="center"
                       style="@style/GeneralBlackFont" />

               </LinearLayout>

           </LinearLayout>

       </LinearLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@color/colorGrey"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:padding="20dp">

           <View
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/box_google"
               android:layout_marginBottom="20dp" />

           <View
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/box_google"
               android:layout_marginBottom="20dp" />

           <View
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/box_google"
               android:layout_marginBottom="20dp" />

       </LinearLayout>

   </LinearLayout>

</ScrollView>